{
  "name": "root",
  "description": "The monorepo for the web-based strategy game Cellscript Empire",
  "author": "Tyler Hurson",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "yarn lerna bootstrap",
    "build": "yarn lerna bootstrap && yarn lerna run build",
    "clean": "yarn lerna clean --yes && yarn lerna run clean --parallel",
    "lint": "yarn lerna run lint --parallel",
    "test": "yarn lerna run test --parallel",
    "version:major": "yarn lerna version major --no-push",
    "version:minor": "yarn lerna version minor --no-push",
    "version:patch": "yarn lerna version patch --no-push"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "scripty": "^2.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
